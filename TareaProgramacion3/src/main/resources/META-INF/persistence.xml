<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.1">
  <persistence-unit name="ProyectoPU" transaction-type="RESOURCE_LOCAL">
    <class>cr.ac.una.tareaprogramacion3.model.Administrador</class>

    <properties>
      <!-- Provider explícito ayuda en proyectos modulares -->
      <property name="jakarta.persistence.provider"
                value="org.eclipse.persistence.jpa.PersistenceProvider"/>

      <!-- JDBC Oracle (⚠️ AJUSTAR) -->
      <property name="jakarta.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
      <!-- SERVICE_NAME -->
      <property name="jakarta.persistence.jdbc.url" value="jdbc:oracle:thin:@//localhost:1521/FREEPDB1"/>
      <!-- Si usas SID en vez de SERVICE_NAME, usa: jdbc:oracle:thin:@TU_HOST:1521:TU_SID -->
      <property name="jakarta.persistence.jdbc.user" value="una"/>
      <property name="jakarta.persistence.jdbc.password" value="una"/>

      <!-- EclipseLink -->
      <property name="eclipselink.logging.level" value="INFO"/>
      <property name="eclipselink.target-database" value="Oracle"/>
      <property name="eclipselink.weaving" value="static"/>
      <property name="eclipselink.ddl-generation" value="none"/>
    </properties>
  </persistence-unit>
</persistence>


  